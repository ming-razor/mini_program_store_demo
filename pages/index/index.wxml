<Panel />

<view class="method">
    <button 
        type="primary" 
        class="margin_b_20"
        bindtap="onReduce"
    >
        减一
    </button>

    <button 
        type="primary" 
        class="margin_b_20"
        bindtap="onChainReduce"
        loading="{{reduce_loading}}"
    >
        2次异步减1
    </button>

    <button 
        type="primary" 
        class="margin_b_20"
        bindtap="onAdd"
    >
        加1
    </button>

    <button 
        type="primary" 
        class="margin_b_20"
        bindtap="onAsyncAdd"
        loading="{{add_loading}}"
    >
        异步加1
    </button>

    <button 
        class="margin_b_20"
        bindtap="toUser"
    >个人页</button>

    <view>{{nickName}}</view>
</view>