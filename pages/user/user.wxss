/* personal.wxss */
page {
    background-color: #f8f8f8;
}
.auth_btn {
    margin-top: 30vh;
}
.ud {
    position      : relative;
    z-index       : 1;
    padding-bottom: 10px;
    box-sizing    : border-box;
}

.user_head {
    background : #07c160;
    padding-top: 30rpx;
    text-align : center;
    font-size  : 0;
}

.user_head image {
    border-radius: 50%;
    overflow     : hidden;
    border       : 1px solid #eee;
    background   : #eee;
    width        : 100px;
    height       : 100px;
}

.user_name {
    color      : #fff;
    text-align : center;
    padding    : 30rpx 0;
    font-size  : 36rpx;
    line-height: 1;
}